<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd

http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet id="customer-initial" author="klenkes74">
        <comment>Customer data for the billing subsystem.</comment>

        <createTable tableName="EMAIL_ADDRESSES">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="EMAIL_ADDRESSES_PK" unique="true" nullable="false"/>
            </column>

            <column name="VERSION_" type="BIGINT" defaultValue="0">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="ADDRESS_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="NAME_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="TYPE_" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="CUSTOMERS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMERS_PK" unique="true" nullable="false"/>
            </column>

            <column name="VERSION_" type="BIGINT" defaultValue="0">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="NAME_" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

            <column name="COST_CENTER_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="BILLING_ADDRESS_" type="BINARY(16)">
                <constraints nullable="true"
                             references="EMAIL_ADDRESSES(ID_)"
                             foreignKeyName="FK_CUSTOMERS_BILLING_ADDRESS"
                />
            </column>

            <column name="CONTACT_ADDRESS_" type="BINARY(16)">
                <constraints nullable="true"
                             references="EMAIL_ADDRESSES(ID_)"
                             foreignKeyName="FK_CUSTOMERS_CONTACT_ADDRESS"
                />
            </column>
        </createTable>

        <createTable tableName="CUSTOMER_TAGS">
            <column name="CUSTOMER_" type="BINARY(16)">
                <constraints nullable="false"
                             references="CUSTOMERS(ID_)"
                             foreignKeyName="FK_CUSTOMER_TAGS_CUSTOMERS"
                             primaryKey="true"
                             primaryKeyName="PK_CUSTOMER_TAGS"
                />
            </column>

            <column name="KEY_" type="VARCHAR(255)">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="PK_CUSTOMER_TAGS"
                />
            </column>

            <column name="VALUE_" type="VARCHAR(255)"/>
        </createTable>


        <createIndex tableName="CUSTOMER_TAGS" indexName="IDX_CUSTOMER_TAGS_CUSTOMER" unique="false">
            <column name="CUSTOMER_"/>
        </createIndex>

        <createIndex tableName="CUSTOMERS" indexName="IDX_CUSTOMERS_NAME" unique="false">
            <column name="NAME_"/>
        </createIndex>
        <createIndex tableName="CUSTOMERS" indexName="IDX_CUSTOMERS_COST_REFERENCE" unique="false">
            <column name="COST_REFERENCE_"/>
        </createIndex>
        <createIndex tableName="CUSTOMERS" indexName="IDX_CUSTOMERS_BILLING_ADDRESS" unique="false">
            <column name="BILLING_ADDRESS_"/>
        </createIndex>
        <createIndex tableName="CUSTOMERS" indexName="IDX_CUSTOMERS_CONTACT_ADDRESS" unique="false">
            <column name="CONTACT_ADDRESS_"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="CUSTOMER_TAGS" indexName="IDX_CUSTOMER_TAGS_CUSTOMER"/>
        </rollback>
        <rollback>
            <dropIndex indexName="CUSTOMERS_NAME" tableName="CUSTOMERS"/>
        </rollback>
        <rollback>
            <dropIndex indexName="CUSTOMERS_COST_REFERENCE" tableName="CUSTOMERS"/>
        </rollback>
        <rollback>
            <dropIndex indexName="CUSTOMERS_BILLING_ADDRESS" tableName="CUSTOMERS"/>
        </rollback>
        <rollback>
            <dropIndex indexName="CUSTOMERS_CONTACT_ADDRESS" tableName="CUSTOMERS"/>
        </rollback>

        <rollback>
            <dropTable tableName="CUSTOMER_TAGS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMERS"/>
        </rollback>
        <rollback>
            <dropTable tableName="EMAIL_ADDRESSES"/>
        </rollback>
    </changeSet>

    <changeSet id="customer-events-initial" author="klenkes74">
        <comment>Customer change events.</comment>

        <createTable tableName="CUSTOMER_EVENTS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMER_EVENTS_PK" unique="true" nullable="false"/>
            </column>

            <column name="DTYPE_" type="VARCHAR(31)">
                <constraints unique="false" nullable="false"/>
            </column>

            <column name="OBJECT_ID_" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>

            <column name="CREATED_" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="EXECUTED_" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="CUSTOMER_CREATE_EVENTS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMER_CREATE_EVENTS_PK" unique="true" nullable="false"/>
            </column>

            <column name="NAME_" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

            <column name="COST_CENTER_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="BILLING_ID_" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>

            <column name="BILLING_ADDRESS_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="BILLING_NAME_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="BILLING_TYPE_" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="CONTACT_ID_" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>

            <column name="CONTACT_ADDRESS_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="CONTACT_NAME_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="CONTACT_TYPE_" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="CUSTOMER_CREATE_TAGS">
            <column name="CUSTOMER_" type="BINARY(16)">
                <constraints nullable="false"
                             references="CUSTOMERS(ID_)"
                             foreignKeyName="FK_CUSTOMER_TAGS_CUSTOMERS"
                             primaryKey="true"
                             primaryKeyName="PK_CUSTOMER_TAGS"
                />
            </column>

            <column name="KEY_" type="VARCHAR(255)">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="PK_CUSTOMER_TAGS"
                />
            </column>

            <column name="VALUE_" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="CUSTOMER_DELETE_EVENTS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMER_DELETE_EVENTS_PK" unique="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="CUSTOMER_UPDATE_COST_CENTER_EVENTS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMER_UPDATE_COST_CENTER_EVENTS_PK" unique="true" nullable="false"/>
            </column>

            <column name="COST_CENTER_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="CUSTOMER_UPDATE_NAME_EVENTS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMER_UPDATE_NAME_EVENTS_PK" unique="true" nullable="false"/>
            </column>

            <column name="NAME_" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="CUSTOMER_UPDATE_TAGS_EVENTS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMER_UPDATE_TAGS_EVENTS_PK" unique="true" nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="CUSTOMER_UPDATE_TAGS">
            <column name="CUSTOMER_" type="BINARY(16)">
                <constraints nullable="false"
                             references="CUSTOMERS_UPDATE_TAGS_EVENTS(ID_)"
                             foreignKeyName="FK_CUSTOMER_UPDATE_TAGS_CUSTOMERS"
                             primaryKey="true"
                             primaryKeyName="PK_CUSTOMER_UPDATE_TAGS"
                />
            </column>

            <column name="KEY_" type="VARCHAR(255)">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="PK_CUSTOMER_UPDATE_TAGS"
                />
            </column>

            <column name="VALUE_" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="CUSTOMER_UPDATE_BILLING_EMAIL_EVENTS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMER_UPDATE_BILLING_EVENTS_PK" unique="true" nullable="false"/>
            </column>

            <column name="ADDRESS_ID_" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>

            <column name="ADRESS_NAME_" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

            <column name="ADDRESS_ADDRESS_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="ADDRESS_TYPE_" type="VARCHAR(20)"/>
        </createTable>

        <createTable tableName="CUSTOMER_UPDATE_CONTACT_EMAIL_EVENTS">
            <column name="ID_" type="BINARY(16)">
                <constraints primaryKey="true" primaryKeyName="CUSTOMER_UPDATE_CONTACT_EVENTS_PK" unique="true" nullable="false"/>
            </column>

            <column name="ADDRESS_ID_" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>

            <column name="ADRESS_NAME_" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

            <column name="ADDRESS_ADDRESS_" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="ADDRESS_TYPE_" type="VARCHAR(20)"/>
        </createTable>



        <createIndex tableName="CUSTOMER_UPDATE_TAGS" indexName="IDX_CUSTOMER_UPDATE_TAGS_CUSTOMER" unique="false">
            <column name="CUSTOMER_"/>
        </createIndex>

        <createIndex tableName="CUSTOMER_EVENTS" indexName="CUSTOMER_EVENTS_DTYPE_IDX">
            <column name="DTYPE_" />
        </createIndex>
        <rollback>
            <dropIndex tableName="CUSTOMER_EVENTS" indexName="CUSTOMER_EVENTS_DTYPE_IDX"/>
        </rollback>
        <rollback>
            <dropIndex tableName="CUSTOMER_UPDATE_TAGS" indexName="IDX_CUSTOMER_UPDATE_TAGS_CUSTOMER"/>
        </rollback>

        <rollback>
            <dropTable tableName="CUSTOMER_UPDATE_CONTACT_EMAIL_EVENTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_UPDATE_BILLING_EMAIL_EVENTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_UPDATE_TAGS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_UPDATE_TAGS_EVENTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_UPDATE_NAME_EVENTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_UPDATE_COST_CENTER_EVENTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_DELETE_EVENTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_CREATE_TAGS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_CREATE_EVENTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_EVENTS"/>
        </rollback>
        <rollback>
            <dropTable tableName="CUSTOMER_EVENTS"/>
        </rollback>

    </changeSet>
</databaseChangeLog>